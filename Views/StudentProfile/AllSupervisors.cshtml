@model IEnumerable<ThesisNest.Models.ViewModels.TeacherViewModel>

<h3 class="mb-4 text-primary">All Supervisors</h3>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var teacher in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <img src="@teacher.ProfileImageUrl" alt="@teacher.FullName" class="rounded-circle mb-3" style="width:80px; height:80px; object-fit:cover; border:2px solid #0d6efd;" />
                    <h5 class="card-title">@teacher.FullName</h5>
                    <p class="card-subtitle text-muted mb-2">@teacher.Designation</p>
                    <p class="mb-2"><i class="bi bi-building"></i> @teacher.Department</p>
                    <p class="mb-0"><i class="bi bi-clock"></i> Available Slots: <strong>@teacher.AvailableSlots</strong></p>
                </div>
                
            </div>
        </div>
    }
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
    }
</style>
