@model ThesisNest.Models.ViewModels.CommSummaryVm

@if (Model.ActiveThreads > 0)
{
    <div class="d-flex align-items-center gap-3">
        <a class="text-decoration-none" title="Students who sent messages">
            <i class="bi bi-chat-dots"></i> @Model.SmsStudents
        </a>
        <a class="text-decoration-none" title="Students who started audio calls">
            <i class="bi bi-telephone"></i> @Model.AudioStudents
        </a>
        <a class="text-decoration-none" title="Students who started video calls">
            <i class="bi bi-camera-video"></i> @Model.VideoStudents
        </a>

        <div class="dropdown">
            <a class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                Open Room (@Model.ActiveThreads)
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                @foreach (var t in Model.Threads)
                {
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Video" asp-action="WithStudent"
                           asp-route-studentProfileId="@t.StudentProfileId">
                            @t.StudentName
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
}
