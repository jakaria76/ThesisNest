@{
    ViewData["Title"] = "Preview Proposal";
    var type = (string)ViewBag.PreviewType;
    var url = (string)ViewBag.FileUrl;
}
<h2 class="mb-3"><i class="bi bi-eye"></i> Preview Proposal</h2>

@if (type == "pdf")
{
    <iframe src="@url" style="width:100%;height:80vh;border:1px solid #ddd;border-radius:.5rem;"></iframe>
}
else if (type == "doc")
{
    <div class="alert alert-info">
        Rendering DOC/DOCX inline. If the browser doesn't render, use <strong>Download</strong>.
    </div>
    <iframe src="@url" style="width:100%;height:80vh;border:1px solid #ddd;border-radius:.5rem;"></iframe>
}
else
{
    <div class="alert alert-warning">
        Unsupported file for inline preview. Please <a class="alert-link"
                                                       href="@Url.Action("Index")">go back</a> and use <strong>Download</strong>.
    </div>
}
