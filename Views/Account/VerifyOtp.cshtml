@model ThesisNest.Models.VerifyOtpViewModel
@{
    ViewData["Title"] = "Verify OTP";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm rounded-3 border-0">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-3">Verify OTP</h3>
                    <p class="text-center text-muted mb-4">
                        Enter the OTP sent to your email. It will expire in 5 minutes.
                    </p>

                    <form asp-action="VerifyOtp" method="post" novalidate>
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-3">
                            <label asp-for="Otp" class="form-label fw-semibold"></label>
                            <input asp-for="Otp" class="form-control form-control-lg" placeholder="Enter OTP" />
                            <span asp-validation-for="Otp" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                Verify OTP
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <a asp-action="Login" class="link-primary">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
