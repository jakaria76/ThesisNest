<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<!-- JavaScript for Show/Hide password -->
<script>
    const toggleRegPassword = document.getElementById('toggleRegPassword');
    const regPasswordField = document.getElementById('regPassword');
    const regIcon = toggleRegPassword.querySelector('i');

    toggleRegPassword.addEventListener('click', () => {
        if (regPasswordField.type === 'password') {
            regPasswordField.type = 'text';
            regIcon.classList.remove('bi-eye');
            regIcon.classList.add('bi-eye-slash');
        } else {
            regPasswordField.type = 'password';
            regIcon.classList.remove('bi-eye-slash');
            regIcon.classList.add('bi-eye');
        }
    });
</script>
