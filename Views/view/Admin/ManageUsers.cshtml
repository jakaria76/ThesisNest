
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<a asp-action="CreateUser" class="btn btn-success mb-3">➕ Create New User</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.Role == "Supervisor")
                    {
                        @if (user.IsApproved)
                        {
                            <span class="text-success">Approved</span>
                        }
                        else
                        {
                            <span class="text-warning">Pending</span>
                        }
                    }
                    else
                    {
                        <span class="text-primary">Active</span>
                    }
                </td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit Role</a>

                    @if (user.Role == "Supervisor" && !user.IsApproved)
                    {
                        <a asp-action="ApproveSupervisor" asp-route-id="@user.Id" class="btn btn-sm btn-success">Approve</a>
                        <a asp-action="RejectSupervisor" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Reject</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
