@model IEnumerable<ThesisNest.Models.StudentProfile>
@{
    ViewData["Title"] = "Student Management";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between mb-4 gap-3">
        <h2 class="mb-0">Student Management</h2>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> Add Student
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No students found.</div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark text-uppercase small">
                    <tr>
                        <th>#</th>
                        <th>Photo & Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Dept</th>
                        <th>Student ID</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr class="align-middle">
                            <td>@s.Id</td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <img src="@Url.Action("Photo", "StudentProfile", new { id = s.Id })"
                                         alt="Profile" class="rounded-circle" width="40" height="40" />
                                    <span>@s.FullName</span>
                                </div>
                            </td>
                            <td>@s.Email</td>
                            <td>@s.PhoneNumber</td>
                            <td>@s.Department</td>
                            <td>@s.StudentId</td>
                            <td class="text-end">
                                <div class="d-flex flex-column flex-sm-row justify-content-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@s.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Delete STUDENT PROFILE (not user)?');">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>

                                    <form asp-action="DeleteAccount" asp-route-id="@s.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Delete STUDENT USER ACCOUNT? This is permanent.');">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-sm btn-danger d-flex align-items-center gap-1">
                                            <i class="bi bi-person-x"></i> Delete Account
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    /* Mobile adjustments */
    @@media (max-width: 575.98px) {
        table tbody td

    {
        font-size: 0.85rem;
        padding: 0.35rem 0.5rem;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table td img {
        width: 30px;
        height: 30px;
    }

    .d-flex.flex-column.flex-sm-row {
        flex-direction: column !important;
        gap: 0.25rem !important;
    }

    .btn-sm i {
        font-size: 0.85rem;
    }

    th, td {
        white-space: nowrap;
    }

    }

    /* Table hover effect */
    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    /* Rounded table */
    .table-responsive {
        border-radius: 0.5rem;
    }
</style>
