@model ThesisNest.Models.ViewModels.ThesisIndexVm
@using ThesisNest.Models
@{
    ViewData["Title"] = "My Submissions";
}

<div class="container mt-3">
    <div class="container-xxl py-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger shadow-sm">@TempData["Error"]</div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">My Submissions</h3>
            <a asp-controller="StudentThesis" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-upload"></i> Upload Proposal
            </a>
        </div>

        <div class="card shadow border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Department</th>
                            <th>Teacher</th>
                            <th>Proposal Status</th>
                            <th>Teacher Status</th>
                            <th>Version</th>
                            <th>Created</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items == null || Model.Items.Count == 0)
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">No submissions yet.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Department</td>
                                    <td>
                                        @if (item.TeacherId.HasValue)
                                        {
                                            <span class="fw-bold text-light">@item.TeacherFullName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>



                                    <td>
                                        <span class="@BadgeCls(item.ProposalStatus)">
                                            @item.ProposalStatus
                                        </span>
                                    </td>

                                    <td>
                                        @if (item.TeacherStatus.HasValue)
                                        {
                                            <span class="@ThesisBadgeCls(item.TeacherStatus)">
                                                @item.TeacherStatus
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-dark">Pending</span>
                                        }
                                    </td>

                                    <td>@item.CurrentVersionNo</td>
                                    <td>@item.CreatedAtStr</td>

                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-controller="StudentThesis"
                                               asp-action="Details"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-secondary">
                                                Details
                                            </a>

                                            @* Accept হলে ভিডিও রুমে যাও *@
                                            @if (item.TeacherStatus.HasValue && item.TeacherStatus == ThesisStatus.Accept)
                                            {
                                                <a asp-controller="Video"
                                                   asp-action="MyRoom"
                                                   class="btn btn-sm btn-outline-success">
                                                    Join Video Room
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    private string BadgeCls(ProposalStatus status)
    {
        return status switch
        {
            ProposalStatus.Submitted => "badge bg-primary",
            ProposalStatus.Draft => "badge bg-secondary",
            ProposalStatus.Approved => "badge bg-success",
            ProposalStatus.Rejected => "badge bg-danger",
            _ => "badge bg-light text-dark"
        };
    }

    private string ThesisBadgeCls(ThesisStatus? status)
    {
        return status switch
        {
            ThesisStatus.Pending => "badge bg-warning text-dark",
            ThesisStatus.Accept => "badge bg-success",
            ThesisStatus.Rejected => "badge bg-danger",
            _ => "badge bg-light text-dark"
        };
    }
}
