@* @model Thesis.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
} *@

<div class="text-center">
    <h1 class="display-4">Oops! An error occurred.</h1>
    <p>Status Code: <strong>@Model.StatusCode</strong></p>
    <p>@Model.Message</p>

    @if (Model.ShowRequestId)
    {
        <p><small>Request ID: <code>@Model.RequestId</code></small></p>
    }

    <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
<div class="container text-center mt-5">
    <h1 class="display-4">Oops! Something went wrong.</h1>
    <p class="lead">Status Code: <strong>@Model.StatusCode</strong></p>
    <p>@Model.Message</p>

    @if (Model.ShowRequestId)
    {
        <p><small>Request ID: <code>@Model.RequestId</code></small></p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>

    @if (!string.IsNullOrEmpty(Model.StackTrace))
    {
        <hr />
        <h4>Details (Development only):</h4>
        <pre>@Model.StackTrace</pre>
    }
    <div class="min-h-screen flex items-center justify-center bg-gray-100 p-6">
        <div class="bg-white shadow-xl rounded-2xl max-w-lg w-full p-8 text-center">
            <!-- Error Icon -->
            <div class="flex justify-center mb-6">
                <svg class="w-20 h-20 text-red-500" fill="none" stroke="currentColor" stroke-width="1.5"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73
                      0 2.813-1.874 1.948-3.374L13.949 3.625c-.866-1.5-3.032-1.5-3.898
                      0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                </svg>
            </div>

            <!-- Error Title -->
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                Oops! Something went wrong.
            </h1>

            <!-- Error Details -->
            <p class="text-gray-600 mb-4">
                Status Code: <span class="font-semibold">@Model.StatusCode</span>
            </p>
            <p class="text-gray-500">@Model.Message</p>

            @if (Model.ShowRequestId)
            {
                <p class="text-sm text-gray-400 mt-2">
                    Request ID: <code>@Model.RequestId</code>
                </p>
            }

            <!-- Buttons -->
            <div class="mt-6 flex justify-center gap-3">
                <a asp-controller="Home" asp-action="Index"
                   class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-xl shadow transition">
                    Back to Home
                </a>

                <a asp-controller="Exception" asp-action="Index"
                   class="px-5 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-xl shadow transition">
                    Try Again
                </a>
            </div>

            <div class="min-h-screen flex items-center justify-center bg-gray-100 p-6">
